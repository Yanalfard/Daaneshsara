<!DOCTYPE html>

<html lang="fa">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset='utf-8'>
    <title>@ViewBag.Title</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/favicon.ico">
    <!-- plugins css -->
    <link href="~/Areas/Admin/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!--tagsinput-->
    <link href="~/Areas/Admin/Content/bootstrap/css/bootstrap-tagsinput.css" rel="stylesheet" />
    <!-- font-icon-->
    <link href="~/Areas/Admin/Fonts/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Fonts/fontawesome/css/fontawesome.min.css" rel="stylesheet" />
    <!-- custom css-->
    <link href="~/Areas/Admin/Content/Styles/style.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/Styles/style-rtl.css" rel="stylesheet" />
    <!-- Loading-->
    <link href="~/Content/Styles/Areas/Admin.min.css" rel="stylesheet" />
    <!--Paging-->
    <link href="~/Areas/Admin/Content/bootstrap/Paging/Paging.css" rel="stylesheet" />
</head>
<body>

    <div class="wrapper flex-div">
        <div class="layout flex-div">
            <!-- Side Nav START -->
            <div class="side-nav" style="z-index:8500">
                <div class="side-nav-inner">
                    <div class="side-nav-logo">
                        <a href="#">
                            <img class="logo logo-dark" width="24" height="24" src="~/Resources/Static/Vector/Logo.svg" />
                            <!--<div class="logo logo-dark" style="background-image: url('/img/admin/logo/logo.png')"></div>-->
