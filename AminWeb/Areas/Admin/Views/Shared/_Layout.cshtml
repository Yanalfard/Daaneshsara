                            <a href="#">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </div>
                    </div>
                    <ul class="side-nav-menu scrollable">
                        <li class="nav-item active">
                            <a href="/Admin/Home">
                                <span class="icon-holder">
                                    <i class="fas fa-home"></i>
                                </span>
                                <span class="title">داشبورد</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="dropdown-toggle" href="javascript:void(0);">
                                <span class="icon-holder">
                                    <i class="fas fa-th-large"></i>
                                </span>
                                <span class="title">ویدیوها </span>
                                <span class="arrow">
                                    <i class="fas fa-chevron-right"></i>
                                </span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="/Admin/Catagory">
                                        دسته بندی ها
                                    </a>
                                </li>
                                <li>
                                    <a href="/Admin/Playlist">
                                        کلاس ها
                                    </a>
                                </li>
                                <li>
                                    <a href="/Admin/Video">
                                        ویدیوها ها
                                    </a>
                                </li>
                                <li>
                                    <a href="/Admin/Video/Report">
                                        تخلفات ویدیوها
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="dropdown-toggle" href="javascript:void(0);">
                                <span class="icon-holder">
                                    <i class="fas fa-th-large"></i>
                                </span>
                                <span class="title">قوانین و درباره ما </span>
                                <span class="arrow">
                                    <i class="fas fa-chevron-right"></i>
                                </span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="/Admin/Home/About">
                                        درباره ما
                                    </a>
                                </li>
                                <li>
                                    <a href="/Admin/Home/Contact">
                                        قوانین سایت
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="dropdown-toggle" href="javascript:void(0);">
                                <span class="icon-holder">
                                    <i class="fas fa-th-large"></i>
                                </span>
                                <span class="title">فروش </span>
                                <span class="arrow">
                                    <i class="fas fa-chevron-right"></i>
                                </span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="/Admin/Order/Prices">
                                        درصد و سقف برداشت
                                    </a>
                                </li>
                                <li>
                                    <a href="/Admin/Order/Sail">
