@model DataLayer.Models.TblConfig
@{
    ViewBag.Title = "درصد و سقف برداشت";
}

<div class="flex-column card flex-div border-0 shadow">
    <div class="card-header bg-white">
        <h4>درصد و سقف برداشت </h4>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="card-body">
            <label>درصد</label>
            <div class="form-group mt-1 mx-sm-1 mb-3">
                @Html.EditorFor(model => model.DarsadeSud, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "درصد" } })
                @Html.ValidationMessageFor(model => model.DarsadeSud, "", new { @class = "text-danger" })
            </div>

            <label>سقف</label>
            <div class="form-group mt-1 mx-sm-1 mb-3">
                @Html.EditorFor(model => model.SaqfeBardasht, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = " سقف برداشت" } })
                @Html.ValidationMessageFor(model => model.SaqfeBardasht, "", new { @class = "text-danger" })
            </div>
            <div class="flex-row">
                <button class="btn btn-primary">تایید</button>
            </div>
        </div>
    }
</div>
