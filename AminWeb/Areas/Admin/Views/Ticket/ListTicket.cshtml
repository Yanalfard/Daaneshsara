@model IEnumerable<DataLayer.Models.TblTicket>
@if (Model.Any())
{
    foreach (var item in Model)
    {
        <tr id="ticket_@item.TicketId" class="list-item">
            <td>@(Model.ToList().IndexOf(item)+1)</td>
            <td>
                @item.Title
            </td>
            <td>@item.TblUser.Name</td>
            <td>@item.TblUser.TellNo</td>
            <td>@item.TblUser.Email</td>
            <td>@item.DateSent.ToShamsi()</td>
            <td>
                <a href="#" onclick="viewTicket(@item.TicketId)" class="fa fa-eye" title="مشاهده تیکت" data-toggle="tooltip" data-placement="top">
                </a>
            </td>
            <td>
                <span data-placement="top" data-toggle="tooltip" title="" data-original-title="حذف">
                    <a onclick="deleteTicket(@item.TicketId)" data-toggle="modal" data-target="#modalSave"><i class="btn fas fa-trash mr-2 text-danger"></i></a>
                </span>
            </td>
        </tr>
    }
}

