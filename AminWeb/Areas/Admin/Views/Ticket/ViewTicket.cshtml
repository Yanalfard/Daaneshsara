@model DataLayer.Models.TblTicket
<form>
    <div class="modal-body">
        <div class="form-row">
            <div class="form-group col-12">
                <h3> موضوع: @Model.Title</h3>
            </div>
            <div class="form-group col-12">
                <p>
                    <h5>
                        @Model.Text
                    </h5>
                </p>
            </div>
        </div>

    </div>
    <div class="space-half"></div>
    @if (Model.AttachmentUrl!=null)
    {
        <div class="modal-footer justify-content-end">

            <a id="BtnProjectCreate" href="~/Resources/Ticket/@Model.AttachmentUrl" class="btn btn-success btn-sm text-white"><i class="fas fa-plus-circle"></i>نمایش فایل</a>
        </div>
    }
</form>