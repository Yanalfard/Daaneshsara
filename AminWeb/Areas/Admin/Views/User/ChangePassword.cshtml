@model DataLayer.ViewModels.VmChangePassword

@using (Ajax.BeginForm("ChangePassword", "User", new AjaxOptions() { HttpMethod = "POST", OnSuccess = "success", UpdateTargetId = "myModal" }, htmlAttributes: new { @id = "ChangePasswordForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <h2 dir="rtl">ویرایش رمز عبور کاربر  @ViewBag.UserName </h2>
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="password">رمز عبور جدید</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", required = "required", minlength = "5" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ویرایش " class="btn btn-success" />
            </div>
        </div>
    </div>
}

