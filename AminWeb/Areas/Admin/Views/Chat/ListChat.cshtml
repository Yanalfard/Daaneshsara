@model IEnumerable<DataLayer.Models.TblChat>
@if (Model.Any())
{
    foreach (var item in Model)
    {
        <tr id="chat_@item.ChatId" class="list-item">
            <td>@(Model.ToList().IndexOf(item)+1)</td>
            <td>
                @item.TblUser.Name
            </td>
            <td>@item.TblUser1.Name</td>
            <td>
                <form action="/Admin/Chat/ViewChat">
                    <input type="hidden" value="@item.SenderId" name="user1" />
                    <input type="hidden" value="@item.RecieverId" name="user2" />
                    <button type="submit" class="border-0 m-0 pl-0 badge badge-info badge-pill"><i class="fa fa-eye"></i></button>
                </form>

            </td>
            <td>
                @*<form action="/Admin/Chat/Delete">
                    <input type="hidden" value="@item.SenderId" name="user1" />
                    <input type="hidden" value="@item.RecieverId" name="user2" />
                    <button type="submit" class="border-0 m-0 pl-0 badge "><i class="fa fa-trash text-danger"></i></button>
                </form>*@
                <span data-placement="top" data-toggle="tooltip" title="" data-original-title="حذف">
                    <a onclick="deleteChat(@item.ChatId,@item.SenderId,@item.RecieverId)" data-toggle="modal" data-target="#modalSave"><i class="btn fas fa-trash mr-2 text-danger"></i></a>
                </span>
            </td>
        </tr>
    }
}

