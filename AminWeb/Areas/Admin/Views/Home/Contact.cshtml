@model DataLayer.MetaData.MdConfig
@{
    ViewBag.Title = "قوانین سایت";
}



<div class="flex-column card flex-div border-0 shadow">
    <div class="card-header bg-white">
        <h4>قوانین سایت </h4>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="card-body">
            <div class="form-group mx-sm-1 mb-2">
                @Html.EditorFor(model => model.Rules, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "نام" } })
                @Html.ValidationMessageFor(model => model.Rules, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="card-footer bg-white">
            <div class="flex-row">
                <button class="btn btn-primary">تایید</button>
            </div>
        </div>
    }
</div>


@section Scripts
{
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/ckeditor/adapters/jquery.js"></script>
    <script>
        $('#Rules').ckeditor();
    </script>
}
