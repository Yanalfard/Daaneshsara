@model IEnumerable<DataLayer.Models.TblReport>
@if (Model.Any())
{
    foreach (var item in Model)
    {
        <tr id="reportVideo_@item.ReportId" class="list-item">
            <td>@(Model.ToList().IndexOf(item)+1)</td>
            <td>
                <a href="/VideoView/@item.VideoId/@item.TblVideo.Title.Replace(" ","-")">
                    @if (item.TblVideo.MainImage != null)
                    {
                        <img style="max-width:100px;" class="thumbnail" src="~/Resources/Video/Image/Thumb/@item.TblVideo.MainImage" alt="@item.TblVideo.Title" />
                    }
                </a>
            </td>
            <td>@item.TblVideo.Title</td>
            <td>@item.DateSent.ToShamsi()</td>
            <td>
                <a href="#" onclick="viewVideoReport(@item.ReportId)" class="fa fa-eye" title="مشاهده تیکت  " data-toggle="tooltip" data-placement="top">
                </a>
            </td>
            <td>
                <span data-placement="top" data-toggle="tooltip" title="" data-original-title="حذف">
                    <a onclick="deleteVideoReport(@item.ReportId)" data-toggle="modal" data-target="#modalSave"><i class="btn fas fa-trash mr-2 text-danger"></i></a>
                </span>
            </td>
        </tr>
    }
}

