@model IEnumerable<DataLayer.Models.TblPlaylist>
@*@model DataLayer.Models.TblPlaylist*@



@if (Model.Any())
{
    <label for="Playlist">کلاس</label>
    <div class="row-reverse">
        <select name="PlaylistId" id="playlistChildId" class="uk-width-2-3 uk-margin-small-left showUnderPlaylist" dir="rtl">
            <option value="">دسته بندی نشده</option>
            @foreach (var item in Model)
            {

                <option value="@item.PlaylistId"> @item.Title</option>
            }
        </select>
        <a href="/User/Classes/Create" uk-icon="plus" uk-tooltip="اضافه کردن کلاس جدید" class="uk-margin-auto-right"></a>

    </div>
}


<script>
    $(document).ready(function () {
        $('#playlistChildId').val($('#PlaylistId').val());
        alert($('#PlaylistId').val());
        $(".showUnderPlaylist").change(function () {
            var id = $(".showUnderPlaylist option:selected").val();
            if (id != "") {
                $("#PlaylistId").val(id);
            }
            else {
                $("#PlaylistId").val("");
            }
        });
    });
</script>
