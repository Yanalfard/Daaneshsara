@model DataLayer.ViewModels.VmRecoveryPassword

@{
    ViewBag.Title = "تغیر رمز";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div role="none" class="space-nav"></div>
<div class="column uk-container">
    @using (Html.BeginForm("RecoveryPassword", "Account", new AjaxOptions() { OnSuccess = "LoadingEnd('#RecoveryPass')" }, FormMethod.Post, new { @id = "RecoveryPass" }))
    {
        @Html.AntiForgeryToken()
        <div class="mat uk-margin-auto
         uk-width-1-2-at-m uk-width-1-1-at-s
         uk-padding column uk-box-shadow-large">
            <h3>
                تغییر رمز عبور
            </h3>

            <div class="form-group">
                <label for="Password">رمز عبور جدید</label>
                <div class="input-group">
                    @Html.EditorFor(m => m.Password)
                </div>
                <span role="alert" class="alert">
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "uk-text-danger" })
                </span>
            </div>

            <div class="form-group">
                <label for="RePassword">تکرار رمز عبور</label>
                <div class="input-group">
                    @Html.EditorFor(m => m.RePassword)
                </div>
                <span role="alert" class="alert">
                    @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "uk-text-danger" })
                </span>
            </div>

            <div class="row uk-margin-large-top">
                <button class="btn-primary uk-margin-auto-left" onclick="LoadingRun('#RecoveryPass')">
                    تغییر
                </button>
            </div>
        </div>
    }
</div>
