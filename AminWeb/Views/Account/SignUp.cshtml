@model DataLayer.ViewModels.VmRegister
@using (Ajax.BeginForm("SignUp", "Account", new AjaxOptions() { HttpMethod = "POST", OnFailure = "doneModal()", OnSuccess = "LoadingEnd('#loginForm')", UpdateTargetId = "loginForm" }, htmlAttributes: new { @id = "loginForm" }))
{
    @Html.AntiForgeryToken()
    <div class="form column" role="form">
        <div class="row-reverse">
            <h3>
                ثبت نام
            </h3>
            <button class="uk-modal-close uk-margin-auto-right" type="button" uk-icon="close"></button>
        </div>

        <div class="form-group">
            <label for="Name">نام و نام خانوادگی</label>
            <div class="input-group">
                @Html.EditorFor(m => m.Name)
            </div>
            <span role="alert" class="alert">
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "uk-text-danger" })
            </span>
        </div>

        <div class="form-group">
            <label for="Email">ایمیل</label>
            <div class="input-group">
                <input type="email" name="Email" />
            </div>
            <span role="alert" class="alert">لطفا این فیلد را وارد نمایید</span>
        </div>

        <div class="form-group">
            <label for="Password">رمز عبور</label>
            <div class="input-group">
                <input type="password" name="Password" />
            </div>
            <span role="alert" class="alert">این فیلد اشتباه است</span>
        </div>

        <label dir="rtl" class="uk-margin-small-top"><input class="uk-checkbox" type="checkbox"> با <a href="#" class="blue">قوانین و مقررات سایت</a> موافق هستم</label>

        <div class="column center uk-margin-large-top">
            <button class="btn-primary uk-margin-bottom">
                ورود
            </button>

            <button class="btn-secondary">
                ثبت نام
            </button>
        </div>
    </div>

}
