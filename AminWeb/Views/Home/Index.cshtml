<script>
    function selectByCategory(id) {
        $("#overlay").fadeIn(100);
        $.get('/Video/SelectVideosByCategory/' + id, function (result) {
            $('#listVideo').html(result);
            $("#overlay").fadeOut(300);
        });
        $("#overlay").fadeOut(300);
    }
</script>

<script>

    const videoNames = [
        'کافه',
        'رستوران',
        'فست فود',
        'فود',
        'دونر',
        'نوتلا'
    ];

    function txtTypeChanged(val) {
        val = val.trim();
        const drop = document.getElementById('drop');
        const catdrop = UIkit.drop(document.getElementsByClassName('category-drop')[0]);

        if (val === '' || val === ' ') {
            catdrop.hide();
            return;
        }

        catdrop.show();

        drop.innerHTML = '';
        for (let vid of videoNames.filter(i => i.includes(val))) {
            const li = document.createElement('li');
            li.innerHTML = vid.replace(val, `<b>${val}</b>`);
            li.addEventListener('click', () => {
                document.getElementById('txtCategory').value = vid;
                catdrop.hide(0);
            });
            drop.appendChild(li);
        }
        if (drop.children.length == 0) {
            catdrop.hide(0);
        }
    }

</script>
