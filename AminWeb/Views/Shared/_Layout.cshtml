<!DOCTYPE html>
<html lang="fa">
<head>

    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="@ViewBag.Content">

    @RenderSection("MySection", false)

    <!--Project Styles-->
    <link href="~/Content/Styles/Controls.min.css" rel="stylesheet" />
    <link href="~/Content/Styles/Global.min.css" rel="stylesheet" />

    <!--UIKit-->
    <link href="~/Content/UIkit/uikit.min.css" rel="stylesheet" />
    <script src="~/Content/UIkit/uikit.min.js"></script>
    <script src="~/Content/UIkit/uikit-icons.min.js"></script>

</head>
<body>

    <!-- #region Header -->

    <header role="navigation" class="top-nav row">
        <nav class="uk-flex-auto row flex-1 uk-margin-left">
            <a href="" class="uk-margin-auto-right lesser">
                پروفایل
            </a>
            <div uk-drop id="navDrop">
                <div class="drop-body uk-padding-small column">
                    <ul class="uk-margin-remove uk-padding-remove">
                        <li>
                            <a href="">
                                <span>پروفایل</span>
                                <span uk-icon="icon:user"></span>
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <span>آپلود</span>
                                <span uk-icon="icon:cloud-upload"></span>
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <span>خروج</span>
                                <span uk-icon="icon:sign-out"></span>
                            </a>
                        </li>
                    </ul>
                    <hr class="uk-grid-margin-small" />
                    <a href="" class="success">
                        <span>130,000</span>
                        <span uk-icon="icon:money"></span>
                    </a>
                </div>
            </div>

            <div role="list" class="row-reverse uk-margin-auto-left">
                <a role="listitem" href="" class="lesser">خانه</a>
                <a role="listitem" href="" class="lesser">درباره ما</a>
                <a role="listitem" href="" class="lesser">تماس با ما</a>
                <a role="listitem" href="" class="lesser">قوانین</a>
            </div>
        </nav>
        <a class="logo uk-margin-right" href="~/Views/Home/Index.cshtml">
            <img src="~/Resources/Static/Vector/Logo.svg" width="50" height="50" alt="Logo" />
        </a>
    </header>

    <!-- #endregion -->
    @*<div class="uk-container uk-margin-auto">
            @RenderBody()
        </div>*@

    @RenderBody()


    <nav class="bottom-nav">
        <ul class="row uk-padding-remove uk-margin-remove">
            <li>
                <a href="" class="column">
                    <span uk-icon="chat" class="uk-margin-auto"></span>
                    <span>گفت و گو</span>
                </a>
            </li>
            <li>
                <a href="" class="column">
                    <span uk-icon="user" class="uk-margin-auto"></span>
                    <span>پروفایل</span>
                </a>
            </li>
            <li>
                <a href="" class="column">
                    <span uk-icon="home" class="uk-margin-auto"></span>
                    <span>خانه</span>
                </a>
            </li>
            <li>
                <a href="" class="column">
                    <span uk-icon="menu" class="uk-margin-auto"></span>
                    <span>دسته بندی ها</span>
                </a>
            </li>
        </ul>
    </nav>

    <!--Scripts-->
    @*<script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>*@

</body>
</html>
